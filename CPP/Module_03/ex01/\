#include "ScavTrap.hpp"

ScavTrap::ScavTrap() : _name("no_one"), _hit_point(100), _energy_point(50), _attack_damage(20)
{
	COUT("ScavTrap default constructor has eben called");
}

ScavTrap::ScavTrap(const std::string &name) : _name(name), _hit_point(100), _energy_point(50), _attack_damage(20)
{
	COUT("ScavTrap name constructor has eben called");
}

ScavTrap::~ScavTrap()
{
	COUT("ScavTrap destructor has been called");
}

ScavTrap::ScavTrap& operator=(ScavTrap &clap)
{
	this->_name = clap._name;
	this->_hit_point = clap._hit_point;
	this->_energy_point = clap._energy_point;
	this->_attack_damage = clap._attack_damage;
	return (*this);
}

void	ScapTrap::attack(const std::string &target)
{
	if (this->_energy_point <= 0 || this->_hit_point <= 0)
	{
		if(this->_energy_point <= 0)
			std::cout << "ScavTrap " << this->_name << " is out of energy" << std::endl;
		return ;
	}
	std::cout << "ClapTrap " << this->_name << " attacks " << target << " causing " << this->_attack_damage << " damage" << std::endl;
	this->_energy_point -= 1;

}
